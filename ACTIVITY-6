#include <stdio.h>

double cal(int steps, double weight) {
    double stepLength = 0.75; 
    double distanceKm = steps * stepLength / 1000.0; 
    return distanceKm * weight * 1.0; 

int main() {
    int steps[5];
    double weight;
    int i;
    double total = 0;

    printf("Enter your weight (kg): ");
    scanf("%lf", &weight);

    for (i = 0; i < 5; i++) {
        printf("Steps on day %d: ", i + 1);
        scanf("%d", &steps[i]);
        total += cal(steps[i], weight);
    }

    printf("\nTotal calories in 5 days = %.2f kcal\n", total);
    printf("Average per day           = %.2f kcal\n", total / 5.0);

    return 0;
}
