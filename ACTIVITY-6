#include <stdio.h>

double cal(int steps, double w) {
    return steps * 0.04 * w;
}

double totalCal(int *s, int i, double w) {
    if (i == 5)
        return 0;
    return cal(s[i], w) + totalCal(s, i + 1, w);
}

int main() {
    int steps[5];
    double weight;
    int i;

    printf("Enter your weight (kg): ");
    scanf("%lf", &weight);

    for (i = 0; i < 5; i++) {
        printf("Steps on day %d: ", i + 1);
        scanf("%d", &steps[i]);
    }

    double total = totalCal(steps, 0, weight);
    double avg   = total / 5.0;

    printf("\nTotal calories in 5 days = %.2f\n", total);
    printf("Average per day          = %.2f\n", avg);

    return 0;
}
